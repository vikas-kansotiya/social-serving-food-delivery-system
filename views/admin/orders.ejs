<% layout('layouts/boilerplate')%>
<!-- All Order So Far Page -->
<div class="container row">
  <h1 class="text-center">All Orders So Far :</h1>
  <% for(let order of orders) { %>
  <div class="card col-4 mx-2 my-2" style="width: 18rem;box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
    <div class="card-body">
      <h5 class="card-title">
        <strong>Total Amount:</strong>â‚¹<%= order.money %>
      </h5>
      <p class="card-text">
        <strong>Mode of Payment:</strong> <%= order.modeOfPayment %>
      </p>
      <p class="card-text"><strong> Status: </strong><%= order.status %></p>
      <p class="card-text">
        <strong> Self Pick Up: </strong><%= order.selfpickup %>
      </p>
      <p class="card-text">
        <small class="text-muted d-block">
          <% if (order.order[0].food.restaurant) { %>
            Restaurant: <%= order.order[0].food.restaurant.username %>
          <% } %>
        </small>
        <% if (order.NGO) { %>
          <small class="text-muted d-block">
            To: <%= order.NGO.username %>
          </small>
        <% } %>
        <% if (order.user) { %>
          <small class="text-muted d-block">
            By: <%= order.user.username %>
          </small>
        <% } %>
      </p>
      <a href="/admin/orders/<%=order._id%>" class="btn btn-primary"
        >View Details</a
      >
    </div>
  </div>
  <% } %>
</div>
