<% layout('layouts/boilerplate') %>
<!-- All Order Detail Page -->
<div class="container row">
  <h1 class="text-center">Order Details :</h1>
  <h3>Transaction Details :</h3>
  <ul>
    <li><strong> Payment ID :</strong> <%= order.transaction.payment_id %></li>
    <li><strong> Order ID :</strong> <%= order.transaction.order_id %></li>
  </ul>
  <% for(let food of order.order) { %>
  <div class="card col-4 mx-2 my-2" style="width: 15rem">
    <img
      src="<%= food.food.image.url?food.food.image.url:'https://openclipart.org/image/800px/289282'%>"
      class="card-img-top"
      style=" width: 14rem; "
      alt="..."
    />

    <div class="card-body">
      <h5 class="card-title"><%= food.food.name%></h5>
      <p class="card-text"><strong> Count : </strong><%= food.count %></p>
      <p class="card-text"><strong> Money :</strong> â‚¹<%= food.money %></p>
    </div>
  </div>
  <% } %>
</div>
